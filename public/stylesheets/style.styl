body
  background-color: black
  padding: 5px
  font: 18px "Courier", Monospace, Arial, sans-serif
  color: white


#github_icon
  height: 30px
  width: 30px

.floatleft
  float: left

.floatright
  float: right

#appName
  margin-right: 50px

// Header
.header-fixed
  position:fixed
  top:0
  margin:auto
  z-index:100000
  width:100%
  background-color: black

.header-content
  margin:5px
  padding:5px

.container
  margin-top:80px
  padding:5px
  z-index: 0

// Preserves Indentation of logs
.log_line
  white-space: pre

#regex
  font: 18px "Courier", Monospace, Arial, sans-serif
  padding-left:10px
  background-color: #666666
  border:solid 1px #333333
  color: white
  width:100%
  box-shadow:
    inset 1px 1px 1px #666666
  border-radius: 10px;
  -moz-border-radius: 10px;
  -khtml-border-radius: 10px;
  -webkit-border-radius: 10px;

#regex:focus
  outline-style: none;
  padding-left:10px

// Menu

.menu
  list-style-type: none
  margin:0px
  padding:0px
  margin-bottom: 10px

.menu li
  display: inline-block
  margin-right: 20px

.info div
  margin-top: 5px

div.autoScroll
  font: 18px "Courier", Monospace, Arial, sans-serif
  color: white
  background-color: black
  font-size: 18px
  padding: 2px 6px 3px;
  border-radius: 10px;
  border: 2px outset buttonface;
  box-sizing: border-box;

button.clearLogBtn
  font: 18px "Courier", Monospace, Arial, sans-serif
  color: white
  background-color: black
  font-size: 18px
  border-radius: 10px

// Stripping
.logs .log_line:nth-child(odd)
  background-color: black

.logs .log_line:nth-child(even)
  background-color: #333333

input[type=checkbox] + label {
  font-style: italic;
  color: #ccc
}
input[type=checkbox]:checked + label {
  font-style: normal;
  color: white
}
a
  color: #00B7FF

h3
  margin-bottom:0px



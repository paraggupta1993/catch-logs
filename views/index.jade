extends layout

block content
  .header-fixed
    .header-content
      ul.menu
        li
          .searchWidget
            input#regex(placeholder="Search")

        li
          div.autoScroll
            input(type='checkbox', id='autoScroll', name='autoScroll', value='autoScroll', checked)
            label(for='autoScroll') AutoScroll

        li.clearLogLi
          button.clearLogBtn= 'Clear Logs'

      ul.menu.info
        li.filename.floatleft
          div.filename

        li#appName.floatright
          div= 'Catch-Logs'

        li.floatright
          a(href='https://github.com/paraggupta1993/catch-logs/issues')
            img#bug_icon(src='/images/bug_icon.png')

        li.floatright
          a(href='https://github.com/paraggupta1993/catch-logs')
            img#github_icon(src='/images/github_icon.png')

  .container.logs
